@model triage_hcp.Models.Pacjent
<link rel="stylesheet" href="~/css/Details.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @await Html.PartialAsync("HiddenFormFields")


            <div class="border shadow p-3 mb-5 bg-white rounded" style="padding: 30px; margin:20px; background-color: white">

                <div class="text-center" style="padding: 20px; margin-bottom: 20px; background-color: @Model.Color">
                    <div class="container">
                        <div class="row">
                            <div class="col-8">
                                <div class="row">
                                    <div class="col-6">
                                        <h2>@Model.Name?.ToUpper() @Model.Surname?.ToUpper()</h2>
                                        <h5>@Model.Gender @Model.Age lat</h5>
                                        <h5>PESEL: @Model.Pesel</h5>
                                    </div>
                                    <div class="col-6">
                                        <h4>@Model.CoDalejZPacjentem</h4>
                                        <h4>@Model.DateTime.ToString("D")</h4>
                                        <h2>@Model.DateTime.ToString("t")</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <h4>@Model.Diagnosis?.ToUpper()</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4">
                                <br />
                                <p>Lokalizacja: </p>
                                <br />
                                <p>Kolor:</p>
                                <br />
                                <p>Do kogo pacjent:</p>
                                <br />
                                <p>Lekarz prowadzący:</p>
                                <br />

                            </div>

                            <div class="col-6">
                                <br />
                                <select class="form-select" id="Room" name="Room">
                                    <option>@Model.Room</option>
                                    @await Html.PartialAsync("RoomList")
                                </select>
                                <br />

                                <select class="form-select" id="Color" name="Color">
                                    @await Html.PartialAsync("ColorList")
                                </select>
                                <br />

                                <select class="form-select" id="ToWhomThePatient" name="ToWhomThePatient">
                                    <option>@Model.ToWhomThePatient</option>
                                    <option>INTERNISTA</option>
                                    <option>CHIRURG</option>
                                </select>
                                <br />

                                <select class="form-select" id="Doctor" name="Doctor">
                                    @await Html.PartialAsync("DoctorsList")
                                </select>

                            </div>
                        </div>
                        <hr />
                        <br />

                        <div class="row text-center">
                            <div class="col-4">
                                <p><b>JAKIE DECYZJE:</b></p>
                                <br />
                            </div>

                            <div class="col-6">
                                <div class="form-group">
                                    <select class="form-select" id="CoDalejZPacjentem" name="CoDalejZPacjentem" required>
                                        <option>@Model.CoDalejZPacjentem</option>
                                        @await Html.PartialAsync("WhatDecision")
                                    </select>
                                </div>
                                <br />
                            </div>
                        </div>
                        <br />
                    </div>


                    <div class="col-6">
                        <div class="border" style="padding: 20px; margin-left:40px; background-color: @Model.Color">
                            <div style="background-color:white; padding: 10px 10px 40px 10px">
                                <h5 class="text-center">Obserwacje ratowniczo pielęgniarskie</h5>
                                <div class="form-group">
                                    <textarea class="form-control" id="ObserwacjeRatPiel" name="ObserwacjeRatPiel" rows="9">
                                        @Model.ObserwacjeRatPiel</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />

                <div class="btn-group" role="group" style="margin-left: 20px">
                    <button type="submit" class="btn btn-success" id="Active" name="Active" value="Tak">
                        ZAPISZ ZMIANY
                    </button>

                    <button asp-controller="ListsOfPatients" asp-action="MainList" class="btn btn-primary">POWRÓT DO LISTY</button>

                    <a href="@Url.Action("Edit","Details", new { Id = Model.Id })"
                       class="btn btn-warning">
                        EDYTUJ DANE
                    </a>

                    <a href="@Url.Action("GeneratePatientDocument","Documentation", new { Id = Model.Id })"
                       class="btn btn-secondary">
                        DRUKUJ DOKUMENTY
                    </a>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        WYPISZ PACJENTA
                    </button>
                </div>
            </div>
        </form>
    </div>



    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div style="display:none">

            @await Html.PartialAsync("HiddenFormFields")

            <select class="form-control" id="Color" name="Color">
                <option>@Model.Color</option>
            </select>

            <select class="form-control" id="Room" name="Room">
                <option>@Model.Room</option>
            </select>

            <select class="form-control" id="ToWhomThePatient" name="ToWhomThePatient">
                <option>@Model.ToWhomThePatient</option>
            </select>

            <select class="form-control" id="Doctor" name="Doctor">
                <option>@Model.Doctor</option>
            </select>

            <select class="form-control" id="ObserwacjeRatPiel" name="ObserwacjeRatPiel">
                <option>@Model.ObserwacjeRatPiel</option>
            </select>

        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Czy na pewno chcesz wypisać pacjenta?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h4>Jaka decyzja:</h4>
                        <br />
                        <div class="form-group">
                            <select class="form-select" id="CoDalejZPacjentem" name="CoDalejZPacjentem" required>
                                @await Html.PartialAsync("WhatDecision")
                            </select>
                        </div>
                        <br />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger" id="Active" name="Active" value="Nie">
                            WYPISZ PACJENTA
                        </button>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">POWRÓT</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>


<script>
    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', function () {
        myInput.focus()
    })
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
