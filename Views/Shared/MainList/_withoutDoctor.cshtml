                                {
                                    <h5>
                                        <span class="animation">
                                            @patient.Surname?.ToUpper() @patient.Name?.ToUpper()
                                        </span>
                                    </h5>

                                }
                                else
                                {
                                    <h5>
                                        @patient.Surname?.ToUpper() @patient.Name?.ToUpper()
                                    </h5>
                                }
