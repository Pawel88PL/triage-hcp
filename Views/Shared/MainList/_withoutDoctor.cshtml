                            @if (patient.Color == "lightskyblue")
                            {
                                @if (patient.WaitingTime > 240)
                                {
                                    <h5>
                                        <span class="animation">
                                            @patient.Surname?.ToUpper() @patient.Name?.ToUpper()
                                        </span>
                                    </h5>

                                }
                                else
                                {
                                    <h5>
                                        @patient.Surname?.ToUpper() @patient.Name?.ToUpper()
                                    </h5>
                                }
                            }

                            <p>@patient.Gender @patient.Age lat</p>
                            <p>PESEL: <b>@patient.Pesel</b></p>
                        </div>


                        <div class="col-5">
                            <p><b>@patient.Symptoms?.ToUpper()</b></p>

                            @if (patient.Color == "red")
                            {
                                @if (patient.WaitingTime > 1)
                                {
                                    <p>
                                        <span class="animation">
                                            Czas oczekiwania na lekarza: <b>@patient.WaitingTime</b> minut
                                        </span>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        Czas oczekiwania na lekarza: <b>@patient.WaitingTime</b> minut
