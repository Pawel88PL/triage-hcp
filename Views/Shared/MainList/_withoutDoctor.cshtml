                        </select>

                        <select class="form-control" id="GCS" name="GCS">
                            <option>@patient.GCS</option>
                        </select>

                        <select class="form-control" id="BodyTemperature" name="BodyTemperature">
                            <option>@patient.BodyTemperature</option>
                        </select>

                    </div>

                    <select name="DoctorId" id="DoctorId" asp-items="@ViewData["Doctors"] as SelectList"
                            class="form-select" style="font-size: 16px" onchange="this.form.submit()">
                        <option value="">Wybierz lekarza...</option>
                    </select>
                }
            </div>
        </div>
    </div>
