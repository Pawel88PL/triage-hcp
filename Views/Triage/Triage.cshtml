@model triage_hcp.Models.Pacjent

@{
    ViewData["Title"] = "Triage";
}

<div class="container">
    <div class="forms">
        <div class="border shadow p-3 mb-5 bg-white rounded">
            <h2 class="text-center">TRIAGE</h2>
            @using (Html.BeginForm("Triage", "Triage", FormMethod.Post))
            {

                <h5>Imię: </h5>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />

                <h5>Nazwisko: </h5>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
                <br />

                <h5>PESEL: </h5>
                <input asp-for="Pesel" class="form-control" />
                <span asp-validation-for="Pesel" class="text-danger"></span>
                <br />

                <h5>Objawy: </h5>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
                <br />

                <h5>Lokalizacja w SOR:</h5>
                <select class="form-control" id="Room" name="Room">
                    <option>Poczekalnia</option>
                    <option>Korytarz</option>
                    <option>Wituś</option>
                    <option>Wituś 1</option>
                    <option>Wituś 2</option>
                    <option>Wituś 3</option>
                    <option>WIT</option>
                    <option>WIT 1</option>
                    <option>WIT 2</option>
                    <option>WIT 3</option>
                    <option>WIT 4</option>
                    <option>Sala obserwacyjna 5</option>
                    <option>Sala obserwacyjna 6</option>
                    <option>Sala obserwacyjna 7</option>
                    <option>Sala obserwacyjna 8</option>
                    <option>Sala obserwacyjna 9</option>
                    <option>Sala obserwacyjna 10</option>
                    <option>Izolatka Z1</option>
                    <option>Izolatka Z2</option>
                    <option>Izolatka Z3</option>
                    <option>Dekontaminacja</option>

                </select>
                <br />

                <h5>Dla kogo pacjent:</h5>
                <select class="form-control" id="ToWhomThePatient" name="ToWhomThePatient">
                    <option>INTERNISTA</option>
                    <option>CHIRURG</option>
                </select>
                <br />



                DateTime TriageDateAndTime = DateTime.Now;
                DateTime TriageDate = DateTime.Today;

                <div style="display: none">
                    <select class="form-control" id="DateTime" name="DateTime">
                        <option>@TriageDateAndTime</option>
                    </select>
                    <br />

                    <select class="form-control" id="TriageDate" name="TriageDate">
                        <option>@TriageDate</option>
                    </select>
                    <br />

                    <select class="form-control" id="Doctor" name="Doctor">
                        <option>Wybierz lekarza</option>
                    </select>

                    <select class="form-control" id="Active" name="Active">
                        <option>Tak</option>
                    </select>

                    <select class="form-control" id="CoDalejZPacjentem" name="CoDalejZPacjentem">
                        <option>W trakcie diagnostyki SOR</option>
                    </select>
                </div>

                <div>
                    <h5 class="text-center">WYBIERZ PRIORYTET PILNOŚCI</h5>
                    <br>
                </div>

                <button type="submit" class="btn btn-danger" id="Color" name="Color" value="red">CZERWONY</button>
                <button type="submit" class="btn btn-warning" id="Color" name="Color" value="orange">POMARAŃCZOWY</button>
                <button type="submit" class="btn btn-warning" style="background-color: yellow" id="Color" name="Color" value="yellow">ŻÓŁTY</button>
                <button type="submit" class="btn btn-success" id="Color" name="Color" value="lightgreen">ZIELONY</button>
                <button type="submit" class="btn btn-primary" id="Color" name="Color" value="lightskyblue">NIEBIESKI</button>
            }
        </div>
    </div>
</div>
