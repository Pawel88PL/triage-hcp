                                }
                                else
                                {
                                    <h5>@patient.StartTime.ToString("g")</h5>
                                    <p>do kogo: <b>@patient.ToWhomThePatient</b></p>
                                }
                            }

                            <p>Lokalizacja: <b>@patient?.Location?.LocationName</b></p>
                        </div>
                    </div>
                </a>
            </div>


            <div class="col-2 pt-4">
                @using (Html.BeginForm("Update", "Details", FormMethod.Post))
                {
                    <input type="hidden" name="PatientId" value="@patient.PatientId" />

                    <div style="display:none">

                        <select class="form-control" id="StartTime" name="StartTime">
                            <option>@patient?.StartTime</option>
                        </select>

                        <select class="form-control" id="Name" name="Name">
                            <option>@patient.Name?.ToUpper()</option>
                        </select>

                        <select class="form-control" id="Surname" name="Surname">
                            <option>@patient.Surname?.ToUpper()</option>
                        </select>

                        <select class="form-control" id="Pesel" name="Pesel">
                            <option>@patient.Pesel</option>
                        </select>

                        <select class="form-control" id="Age" name="Age">
                            <option>@patient.Age</option>
                        </select>

                        <select class="form-control" id="Gender" name="Gender">
