                                    </p>
                                }
                            }

                        </div>


                        <div class="col-3">
                            @if (patient.Color == "red")
                            {
                                @if (patient.WaitingTime > 1)
                                {
                                    <h5>
                                        <span class="animation">
                                            @patient.StartTime.ToString("g")
                                        </span>
                                    </h5>
                                    <span class="animation">
                                        do kogo: <b>@patient.ToWhomThePatient</b>
                                    </span>
                                    <br />
                                    <br />
                                }
                                else
                                {
                                    <h5>@patient.StartTime.ToString("g")</h5>
                                    <p>do kogo: <b>@patient.ToWhomThePatient</b></p>
                                }
                            }

                            @if (patient.Color == "orange")
                            {
                                @if (patient.WaitingTime > 10)
                                {
                                    <h5>
                                        <span class="animation">
                                            @patient.StartTime.ToString("g")
                                        </span>
                                    </h5>
                                    <span class="animation">
