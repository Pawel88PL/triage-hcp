@model IEnumerable<triage_hcp.Models.Patient>
<link rel="stylesheet" href="~/css/statistics.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Statystyki";
}

<div class="container border shadow bg-white rounded">
    <h3 class="text-center">Statystyki</h3>
    <br />
    <div class="row">
            @foreach (var patient in Model.OrderByDescending(x => x.StartTime))
            {
                <div class="border" style="margin: 10px; padding: 5px 5px 5px 15px; border-radius: 5px; max-width: 300px">
                    <h5>@patient.StartTime.ToString("D") - <b>@patient.PatientId</b></h5>
                </div>
            }
    </div>
</div>
